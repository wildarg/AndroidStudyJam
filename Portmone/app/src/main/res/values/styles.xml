<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/PortmoneActionBar</item>
        <item name="actionBarItemBackground">@drawable/action_button_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="homeAsUpIndicator">@drawable/drawer</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/right_to_left_in</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_out</item>
    </style>

    <style name="PortmoneActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary_dark</item>
    </style>

    <style name="OperationEditorTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
